<%- include('../partials/header') %>
<% function numberWithCommas(x) { %>
  <% return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ","); %>
<% } %>
<div id = "spendings">
  <% let totalSpendings = 0 %>
    <h3> Total Spendings: 
        <% user.items.forEach((m) => { %>
          <%totalSpendings += m.cost %>
    <% }) %>
    <%='$'+numberWithCommas(totalSpendings) %> %> 
    </h3>
    <h3>Budget remaining: $<%= user.budget - totalSpendings%></h3>
  </div>

<table class="table table-striped table-dark">
      <thead>
      <tr class="bg-warning">
        <th>Item Name</th>
        <th>Price</th>
        <th>Location</th>
        <th>Date</th>
        <th>Category</th>
        <th>Upcoming</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% user.items.forEach((m) => { %>
        <tr>
          <td><%= m.name %></td>
          <td>$<%=m.cost %></td>
          <td><%= m.location %></td>
          
          

          <!-- Proper Date Formatting: -->
          <% const dateTimeFormat = new Intl.DateTimeFormat('en', { year: 'numeric', month: 'short', day: '2-digit' }) %>
          <% const [{ value: month },,{ value: day },,{ value: year }] = dateTimeFormat .formatToParts(m.date) %>
          <td><%= `${day}-${month}-${year }`%></td>

          <td><%= m.category %></td>
          
          <% if (m.upcoming) { %>
              <%= m.upcoming = "UPCOMING" %>
              <td><%= m.upcoming %></td>
          <% } else { %>
             <td><%= m.upcoming = "No" %></td>
            <% } %> 
            <td>
            <form action="/budget/<%= m._id %>?_method=DELETE" method="POST" class ="delete-form">
              <button class="btn btn-success" type="submit">X</button></td>
            </form>
            <td><a href="/budget/<%= m._id %>/edit">Edit</a></td>
        </tr> 
      <% }) %>
    </tbody>
  </table>
  
</form<>

<br>
  <div class="jumbotron">
    <h1 class="display-4">Advanced Budget Information</h1>
    <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
    <hr class="my-4">
    <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
  </div>

<%- include('../partials/footer') %>
