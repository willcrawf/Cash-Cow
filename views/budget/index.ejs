<%- include('../partials/header') %>
<% function numberWithCommas(x) { %>
  <% return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ","); %>
<% } %>


<table class="table table-striped table-dark">
      <thead>
      <tr>
        <th>Item Name</th>
        <th>Price</th>
        <th>Location</th>
        <th>Date</th>
        <th>Category</th>
        <th>Upcoming</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% user.items.forEach((m) => { %>
        <tr>
          <td><%= m.name %></td>
          <td>$<%=m.cost %></td>
          <td><%= m.location %></td>
          
          

          <!-- Proper Date Formatting: -->
          <% const dateTimeFormat = new Intl.DateTimeFormat('en', { year: 'numeric', month: 'short', day: '2-digit' }) %>
          <% const [{ value: month },,{ value: day },,{ value: year }] = dateTimeFormat .formatToParts(m.date) %>
          <td><%= `${day}-${month}-${year }`%></td>

          <td><%= m.category %></td>
          
          <% if (m.upcoming) { %>
              <%= m.upcoming = "UPCOMING" %>
              <td><%= m.upcoming %></td>
          <% } else { %>
             <td><%= m.upcoming = "No" %></td>
            <% } %> 
            <td>
            <form action="/budget/<%= m._id %>?_method=DELETE" method="POST" class ="delete-form">
              <button class="btn btn-success" type="submit">X</button></td>
            </form>
            <td><a href="">Edit</a></td>
        </tr> 
      <% }) %>
    </tbody>
  </table>
  
</form<>
<% let totalSpendings = 0 %>
  <h3> Total Spendings: 
      <% user.items.forEach((m) => { %>
        <%totalSpendings += m.cost %>
  <% }) %>
  $<%=numberWithCommas(totalSpendings) %> %> 
  </h3>

<%- include('../partials/footer') %>
